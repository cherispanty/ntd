<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zftx.mcdaily.mapper.HobbyMapper">
    <resultMap id="hobby" type="com.zftx.mcdaily.bean.Hobby">
        <id column="id" property="id"/>
        <result column="value" property="value"/>
    </resultMap>

    <select id="getHobby" resultMap="hobby">
        select id,value from hobby
        <if test="hobby != null">
            <where>
                <if test="hobby.id != null">
                    id = #{hobby.id}
                </if>
                <if test="hobby.value != null">
                   and  value like concat(#{hobby.value},'%')
                </if>
            </where>
        </if>
    </select>

    <!--添加兴趣-->
    <insert id="insertHobby" keyProperty="hobby.id" useGeneratedKeys="true" parameterType="com.zftx.mcdaily.bean.Hobby">
        insert ignore into hobby
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="hobby != null">
                <if test="hobby.id !=null">
                    id,
                </if>
                <if test="hobby.value !=null">
                    value,
                </if>
            </if>
        </trim>
        <trim prefix="values(" suffix=")" suffixOverrides=",">
            <if test="hobby != null">
                <if test="hobby.id !=null">
                    #{hobby.id,jdbcType=INTEGER},
                </if>
                <if test="hobby.value !=null and hobby.value !=''">
                    #{hobby.value},
                </if>
            </if>
        </trim>
    </insert>

    <!--修改兴趣-->
    <update id="updateHobby" parameterType="com.zftx.mcdaily.bean.Hobby">
        UPDATE  hobby
        <set>
            <if test="hobby.id != null and hobby.id!=''">
                id=#{hobby.id},
            </if>
            <if test="hobby.value != null ">
                value=#{hobby.value},
            </if>
        </set>
        WHERE id=#{hobby.id}
    </update>

    <!--实际删除 兴趣-->
    <delete id="deleteHobby" parameterType="com.zftx.mcdaily.bean.Hobby">
       delete from hobby  where id=#{hobby.id}
    </delete>
</mapper>