<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zftx.mcdaily.mapper.UserMapper">
    <resultMap id="user" type="com.zftx.mcdaily.bean.User">
        <id column="id" property="id"/>
        <result column="user_name" property="userName"/>
        <result column="password" property="password"/>
        <result column="email" property="email"/>
        <result column="phone" property="phone"/>
        <result column="birthplace" property="birthplace"/>
        <result column="birthday" property="birthday"/>
        <result column="position" property="position"/>
        <result column="hobby" property="hobby"/>
        <result column="motto" property="motto"/>
    </resultMap>

    <sql id="userAll">id,user_name,password,email,phone,birthplace,birthday,position,hobby,motto</sql>
    <select id="getUser" resultMap="user">
        select <include refid="userAll" /> from user
        <if test="user != null">
            <where>
                <if test="user.id != null">
                    id = #{user.id}
                </if>
                <if test="user.userName != null">
                   and  user_name like concat(#{user.userName},'%')
                </if>
                <if test="user.password != null">
                    and password = #{user.password}
                </if>
                <if test="user.email != null">
                    and  email like concat(#{user.email},'%')
                </if>
                <if test="user.birthplace != null">
                    and birthplace  like concat(#{user.birthplace},'%')
                </if>
                <if test="user.birthday != null">
                    and birthday  like concat(#{user.birthday},'%')
                </if>
                <if test="user.position != null">
                    and position  like concat(#{user.position},'%')
                </if>
                <if test="user.position != null">
                    and hobby  like concat(#{user.hobby},'%')
                </if>
                <if test="user.position != null">
                    and motto  like concat(#{user.motto},'%')
                </if>
            </where>
        </if>
    </select>

    <!--添加用户-->
    <insert id="insertUser" keyProperty="user.id" useGeneratedKeys="true" parameterType="com.zftx.mcdaily.bean.User">
        insert ignore into user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="user != null">
                <if test="user.id !=null">
                    id,
                </if>
                <if test="user.userName !=null">
                    user_name,
                </if>
                <if test="user.password !=null">
                    password,
                </if>
                <if test="user.email !=null">
                    email,
                </if>
                <if test="user.phone !=null">
                    phone,
                </if>
                <if test="user.birthplace !=null">
                    birthplace,
                </if>
                <if test="user.birthday !=null">
                    birthday,
                </if>
                <if test="user.position !=null">
                    position,
                </if>
                <if test="user.hobby !=null">
                    hobby,
                </if>
                <if test="user.motto !=null">
                    motto,
                </if>
            </if>
        </trim>
        <trim prefix="values(" suffix=")" suffixOverrides=",">
            <if test="user != null">
                <if test="user.id !=null">
                    #{user.id,jdbcType=INTEGER},
                </if>
                <if test="user.userName !=null">
                    #{user.userName},
                </if>
                <if test="user.password !=null">
                    #{user.password},
                </if>
                <if test="user.email !=null">
                    #{user.email},
                </if>
                <if test="user.phone !=null">
                    #{user.phone},
                </if>
                <if test="user.birthplace !=null">
                    #{user.birthplace},
                </if>
                <if test="user.birthday !=null">
                    #{user.birthday},
                </if>
                <if test="user.position !=null">
                    #{user.position},
                </if>
                <if test="user.hobby !=null">
                    #{user.hobby},
                </if>
                <if test="user.motto !=null">
                    #{user.motto},
                </if>
            </if>
        </trim>
    </insert>


</mapper>