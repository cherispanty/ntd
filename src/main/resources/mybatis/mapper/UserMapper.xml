<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN "
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zftx.mcdaily.user.dao.UserDao">


    <insert id="addUser" keyProperty="userInfo.id" useGeneratedKeys="true" parameterType="com.zftx.mcdaily.user.model.UserInfo">
        INSERT INTO t_user_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userInfo !=null">
                nick_name
            </if>
        </trim>
        <trim prefix="VALUES (" suffix=")"  suffixOverrides=",">
            <if test="userInfo !=null">
                <if test="userInfo.roles!=null">
                    #{userInfo.roles},
                </if>
                <if test="userInfo.realNameState!=null">
                    #{userInfo.realNameState},
                </if>
                <if test="userInfo.idCardNo!=null">
                    #{userInfo.idCardNo},
                </if>
                <if test="userInfo.phone!=null ">
                    #{userInfo.phone},
                </if>
                <if test="userInfo.headImg!=null ">
                    #{userInfo.headImg},
                </if>
                <if test="userInfo.nickName!=null ">
                    #{userInfo.nickName},
                </if>
                <if test="userInfo.password!=null ">
                    #{userInfo.password},
                </if>
                <if test="userInfo.userId!=null ">
                    #{userInfo.userId},
                </if>
                <if test="userInfo.userName!=null ">
                    #{userInfo.userName},
                </if>
            </if>
        </trim>
    </insert>



</mapper>